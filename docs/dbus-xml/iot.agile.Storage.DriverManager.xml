  <method name="Remove">
  
      <arg name="driver" type="o" direction="in"/>
  
  </method>

  <method name="Enable">
  
      <arg name="driver" type="o" direction="in"/>
  
  </method>

  <method name="Disable">
  
      <arg name="driver" type="o" direction="in"/>
  
  </method>

  <method name="Status">
  
      <arg name="driver" type="o" direction="in"/>
      <arg name="return" type="{b(i)s}" direction="out"/>
  
  </method>
<property
  name="Enabled"
