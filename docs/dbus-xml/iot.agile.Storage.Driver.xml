<!DOCTYPE node PUBLIC "-//freedesktop//DTD D-BUS Object Introspection 1.0//EN"
       "http://www.freedesktop.org/standards/dbus/1.0/introspect.dtd">
<node name="/iot/agile/Storage/Driver">

  <interface name="iot.agile.Storage.Driver">
    <method name="Create">
  
      <arg name="record" type="{ssssd}" direction="in"/>
      <arg name="return" type="s" direction="out"/>
  
  </method>

  <method name="Read">
  
      <arg name="id" type="s" direction="in"/>
      <arg name="return" type="{ssssd}" direction="out"/>
  
  </method>

  <method name="Update">
  
      <arg name="id" type="s" direction="in"/>
      <arg name="record" type="{ssssd}" direction="in"/>
  
  </method>

  <method name="Delete">
  
      <arg name="id" type="s" direction="in"/>
  
  </method>

  <method name="Find">
  
      <arg name="query" type="{vvdd}" direction="in"/>
      <arg name="return" type="({ssssd})" direction="out"/>
  
  </method>
<property
  name="Name"
  type="s"
  access="read"
  />

<property
  name="Enabled"
  type="b"
  access="read"
  />

<property
  name="Status"
  type="(i)"
  access="read"
  />

<property
  name="Error"
  type="b"
  access="readwrite"
  />
<signal name="ErrorChanged">

  <arg name="Error" type="b" />

</signal>

<property
  name="Params"
  type="{sv}"
  access="readwrite"
  />

<property
  name="Logs"
  type="s"
  access="read"
  />

  </interface>

</node>
